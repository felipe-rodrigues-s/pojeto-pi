<% if (productData.length == 0) { %>
    <section style="height: 100vh; width: 100%; display: flex; justify-content: center;">
        <h1 >Sem resultandos por mostrar!</h1>
    </section>
<% } else { %>
    <% for( let i=0; i < productData.length; i++ ) { %>
        <section class="procuct">
            <img src="<%= productData[i].image %> " alt="<%= productData[i].name %> ">
            <div class="product-description">
                <p>
                    <h1><%= productData[i].name %> </h1>
                    <%= productData[i].description %>
                </p>
            </div>
            <div class="product-actions">
                <h4>super desconto</h4>
                <p id="before">R$ <%= productData[i].price %> <strong>12%</strong></p>
                <p id="after">R$ <%= productData[i].price %>
                </p>
                <p>Em 1x no cart√£o</p>
                <h4>Calcular frete</h4>
                <form action="">
                    <input type="text" name="cep" id="cep">
                    <input id="ok" type="submit" value="ok">
                </form>
                <form action="">
                    <input id="buy" type="submit" value="comprar">
                </form>
            </div>
        </section>
        <% } %>
 <%}%>